<Window x:Class="RFMSystem.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Sheetil" Height="800" Width="1200"
        WindowStartupLocation="CenterScreen"
        MinWidth="800" MinHeight="600"
        Background="#F5F5F5"
        WindowStyle="None" AllowsTransparency="True"
        ResizeMode="CanResize">
    <Window.Resources>
        <Style TargetType="Button">
            <Setter Property="Padding" Value="20,12"/>
            <Setter Property="Margin" Value="0,5"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="Cursor" Value="Hand"/>
        </Style>
    </Window.Resources>
    
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        
        <!-- Custom Title Bar -->
        <Grid Grid.Row="0" Background="#2196F3" MouseLeftButtonDown="TitleBar_MouseLeftButtonDown">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="Auto"/>
            </Grid.ColumnDefinitions>
            <TextBlock Grid.Column="0" Text="Sheetil" Foreground="White" 
                      FontSize="16" FontWeight="Bold" 
                      VerticalAlignment="Center" Margin="10,0"/>
            <StackPanel Grid.Column="1" Orientation="Horizontal">
                <Button Content="─" Width="40" Height="30" 
                       Click="MinimizeButton_Click" 
                       Background="Transparent" Foreground="White" 
                       BorderThickness="0" FontSize="18" Padding="0"/>
                <Button Content="✕" Width="40" Height="30" 
                       Click="CloseButton_Click" 
                       Background="Transparent" Foreground="White" 
                       BorderThickness="0" FontSize="18" Padding="0"/>
            </StackPanel>
        </Grid>
        
        <!-- Main Content -->
        <Grid Grid.Row="1">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="250"/>
            </Grid.ColumnDefinitions>
            
            <!-- Main Content Area -->
            <Grid Grid.Column="0" Background="White" Margin="0,0,1,0">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>
                
                <!-- Search Bar -->
                <Border Grid.Row="0" Background="White" Padding="20">
                    <TextBox x:Name="SearchTextBox" 
                            TextChanged="SearchTextBox_TextChanged"
                            KeyDown="SearchTextBox_KeyDown"
                            FontSize="14" Padding="15,12"
                            BorderBrush="#E0E0E0" BorderThickness="1"
                            MaxWidth="600" HorizontalAlignment="Center">
                        <TextBox.Style>
                            <Style TargetType="TextBox">
                                <Setter Property="Template">
                                    <Setter.Value>
                                        <ControlTemplate TargetType="TextBox">
                                            <Border BorderBrush="{TemplateBinding BorderBrush}" 
                                                   BorderThickness="{TemplateBinding BorderThickness}" 
                                                   CornerRadius="8" Background="White">
                                                <Grid>
                                                    <ScrollViewer x:Name="PART_ContentHost" Margin="5"/>
                                                </Grid>
                                            </Border>
                                        </ControlTemplate>
                                    </Setter.Value>
                                </Setter>
                            </Style>
                        </TextBox.Style>
                    </TextBox>
                </Border>
                
                <!-- Main Content -->
                <ContentControl x:Name="MainContentArea" Grid.Row="1"/>
            </Grid>
            
            <!-- Sidebar -->
            <Border Grid.Column="1" Background="#F8F8F8" BorderBrush="#E0E0E0" BorderThickness="1,0,0,0">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>
                    
                    <!-- Top Navigation -->
                    <StackPanel Grid.Row="0" Margin="20">
                        <Button Content="History" Background="#2196F3" Foreground="White" 
                               Click="HistoryButton_Click"/>
                        <Button Content="Upload/Download" Background="#4CAF50" Foreground="White" 
                               Click="UploadDownloadButton_Click"/>
                        <Button Content="RFM" Background="#FF9800" Foreground="White" 
                               Click="RFMButton_Click"/>
                        <Button Content="CRM" Background="#9C27B0" Foreground="White" 
                               Click="CRMButton_Click"/>
                    </StackPanel>
                    
                    <!-- Spacer -->
                    <Grid Grid.Row="1"/>
                    
                    <!-- Bottom Utilities -->
                    <StackPanel Grid.Row="2" Margin="20">
                        <Button Content="Settings" Background="#607D8B" Foreground="White" 
                               Click="SettingsButton_Click"/>
                        <Button Content="Dashboard" Background="#795548" Foreground="White" 
                               Click="DashboardButton_Click"/>
                        <Ellipse Width="40" Height="40" Margin="0,10,0,0" 
                                Fill="#E0E0E0" Cursor="Hand" 
                                MouseLeftButtonDown="ProfileIcon_MouseLeftButtonDown">
                            <Ellipse.ToolTip>
                                <ToolTip Content="User Profile"/>
                            </Ellipse.ToolTip>
                        </Ellipse>
                    </StackPanel>
                </Grid>
            </Border>
        </Grid>
        
        <!-- Blur Overlay for Popups -->
        <Border x:Name="BlurOverlay" Background="#000000" Opacity="0" 
               Visibility="Collapsed" MouseLeftButtonDown="BlurOverlay_MouseLeftButtonDown">
            <Border.Effect>
                <BlurEffect Radius="10"/>
            </Border.Effect>
        </Border>
    </Grid>
</Window>
